<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.1">
    <persistence-unit name="school">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.api.model.Student</class>
        <class>com.api.model.Teacher</class>
        <class>com.api.model.Subject</class>
        <properties>
        
        
        <property name="jakarta.persistence.jdbc.url"
          value="jdbc:mysql://mysql-service:3306/school_database?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>

            <property name="jakarta.persistence.jdbc.user" value="school_user"/>
            <property name="jakarta.persistence.jdbc.password" value="school_pass"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
